{
  /**
   * Opened state of the toast, use event to change
   */
  "opened": {
    "name": "opened",
    "type": "Boolean",
    "value": false,
    "reflectToAttribute": true
  },
  /**
   * Plain text based message to display
   */
  "text": {
    "name": "text",
    "type": "String",
    "value": "Saved"
  },
  /**
   * Class name, fit-bottom being a useful one
   */
  "classStyle": {
    "name": "classStyle",
    "type": "String",
    "value": ""
  },
  /**
   * Text for the close button
   */
  "closeText": {
    "name": "closeText",
    "type": "String",
    "value": "Close"
  },
  /**
   * How long the toast message should be displayed
   */
  "duration": {
    "name": "duration",
    "type": "Number",
    "value": 4000
  },
  /**
   * Event callback when hide is called
   */
  "eventCallback": {
    "name": "eventCallback",
    "type": "String"
  },
  /**
   * If there should be a close button shown
   */
  "closeButton": {
    "name": "closeButton",
    "type": "Boolean",
    "value": true,
    "reflectToAttribute": true
  }
}
